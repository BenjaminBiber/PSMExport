@page "/"
@using BenjaminBiber.PSM_Api.Data.Clients
@using BenjaminBiber.PSM_Api.Data.Models
@using BenjaminBiber.PSM_Api.Data.Services
@using System.Text
@using System.Reflection
@inject IPsmExportService ExportService
@inject ExportColumnRegistry ColumnRegistry
@inject NavigationManager Navigation

<PageTitle>PSM-Export</PageTitle>

<div class="container psm-page">
    <div class="psm-hero">
        <h1 class="psm-title">PSM-Export</h1>
        <p class="psm-subtitle">Exportiert alle Mittel inkl. Wirkstoffe, Zulassungszeitraum und dekodierte Schadorganismen.</p>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card psm-card">
                <div class="card-body">
                    <h2 class="psm-section-title">Spaltenauswahl</h2>
                    @foreach (var column in _columns)
                    {
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   id="@($"col-{column.Column.Id}")"
                                   @bind="column.IsSelected" />
                            <label class="form-check-label" for="@($"col-{column.Column.Id}")">
                                @column.Column.Label
                            </label>
                        </div>
                    }
                    <div class="mt-3 d-flex gap-2 flex-wrap">
                        <button class="btn btn-primary" @onclick="ExportCsv" disabled="@(!_columns.Any(c => c.IsSelected) || _isExporting)">
                            CSV exportieren
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="LoadPreviewAsync" disabled="@_isLoading">
                            Preview laden
                        </button>
                        @if (_isExporting)
                        {
                            <span class="d-inline-flex align-items-center text-muted">
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                CSV wird erstellt...
                            </span>
                        }
                    </div>
                    @if (!string.IsNullOrWhiteSpace(_error))
                    {
                        <div class="alert alert-danger mt-3" role="alert">@_error</div>
                    }
                </div>
            </div>
            <div class="card psm-card mt-4">
                <div class="card-body">
                    <h2 class="psm-section-title">API CSV-Downloads</h2>
                    <p class="text-muted">CSV-Download fuer jede GetAll-Methode aus dem Nuget-Client.</p>
                    @if (_apiDownloads.Count == 0)
                    {
                        <p class="text-muted">Keine GetAll-Methoden gefunden.</p>
                    }
                    else
                    {
                        <div class="d-grid gap-2">
                            @foreach (var method in _apiDownloads)
                            {
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div>@method.Label</div>
                                        <div class="text-muted small">@method.Name</div>
                                    </div>
                                    <button class="btn btn-outline-primary btn-sm"
                                            @onclick="() => StartApiExport(method.Name)"
                                            disabled="@_isApiExporting">
                                        CSV
                                    </button>
                                </div>
                            }
                        </div>
                        @if (_isApiExporting)
                        {
                            <div class="mt-3 d-inline-flex align-items-center text-muted">
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                CSV wird erstellt...
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card psm-card">
                <div class="card-body">
                    <h2 class="psm-section-title">Preview</h2>
                    @if (_isLoading)
                    {
                        <p class="psm-progress">@_statusText</p>
                        @if (_showCount)
                        {
                            <p class="psm-progress">
                                <strong>@_completedCount</strong> von <strong>@_totalToProcess</strong> fertig
                            </p>
                        }
                        @if (_hasEta)
                        {
                            <p class="psm-progress">Noch ca. @_etaRemaining, fertig gegen @_etaFinish.</p>
                        }
                    }
                    else if (_previewData.Count == 0)
                    {
                        <p class="text-muted">Noch keine Daten geladen.</p>
                    }
                    else
                    {
                        <p class="text-muted">Zeigt @Math.Min(_previewData.Count, 20) von @_totalCount Eintraegen.</p>
                        <div class="table-responsive">
                            <table class="table table-sm align-middle">
                                <thead>
                                <tr>
                                    @foreach (var column in SelectedColumns)
                                    {
                                        <th>@column.Column.Label</th>
                                    }
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var mittel in _previewData)
                                {
                                    <tr>
                                        @foreach (var column in SelectedColumns)
                                        {
                                            <td>@column.Column.ValueSelector(mittel)</td>
                                        }
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private readonly List<ColumnSelection> _columns = [];
    private readonly List<ApiMethodEntry> _apiDownloads = [];
    private readonly List<MittelAggregate> _previewData = [];
    private int _totalCount;
    private int _totalToProcess;
    private int _completedCount;
    private bool _isLoading;
    private string? _error;
    private DateTime _startTimeUtc;
    private string? _etaRemaining;
    private string? _etaFinish;
    private bool _hasEta;
    private string _statusText = "Lade Daten...";
    private bool _showCount;
    private bool _isExporting;
    private bool _isApiExporting;

    private IEnumerable<ColumnSelection> SelectedColumns => _columns.Where(column => column.IsSelected);

    protected override void OnInitialized()
    {
        _columns.AddRange(ColumnRegistry.Columns.Select(column => new ColumnSelection(column, true)));
        _apiDownloads.AddRange(LoadApiDownloads());
    }

    private async Task LoadPreviewAsync()
    {
        _isLoading = true;
        _error = null;
        _previewData.Clear();
        _totalCount = 0;
        _totalToProcess = 0;
        _completedCount = 0;
        _etaRemaining = null;
        _etaFinish = null;
        _hasEta = false;
        _statusText = "Lade Daten...";
        _showCount = false;
        _startTimeUtc = DateTime.UtcNow;

        try
        {
            var progress = new Progress<ExportProgress>(value =>
            {
                _statusText = value.Stage;
                _completedCount = value.Completed;
                _totalToProcess = value.Total;
                _showCount = value.Total > 0;
                UpdateEta();
                _ = InvokeAsync(StateHasChanged);
            });

            var data = await ExportService.LoadAggregatedAsync(progress, CancellationToken.None);
            _totalCount = data.Count;
            _previewData.AddRange(data.Take(20));
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void ExportCsv()
    {
        var selected = SelectedColumns.Select(column => column.Column.Id).ToList();
        if (selected.Count == 0)
        {
            _error = "Bitte waehle mindestens eine Spalte aus.";
            return;
        }

        var query = string.Join(",", selected);
        _isExporting = true;
        Navigation.NavigateTo($"/export?columns={Uri.EscapeDataString(query)}", true);
    }

    private static IReadOnlyList<ApiMethodEntry> LoadApiDownloads()
    {
        return typeof(IPsmApiClient)
            .GetMethods()
            .Where(IsGetAllMethod)
            .OrderBy(method => method.Name, StringComparer.Ordinal)
            .Select(method => new ApiMethodEntry(method.Name, ToLabel(method.Name)))
            .ToList();
    }

    private static bool IsGetAllMethod(MethodInfo method)
    {
        if (!method.Name.StartsWith("GetAll", StringComparison.Ordinal) ||
            !method.Name.EndsWith("Async", StringComparison.Ordinal) ||
            string.Equals(method.Name, "GetAllAsync", StringComparison.Ordinal))
        {
            return false;
        }

        var parameters = method.GetParameters();
        return parameters.Length == 1 && parameters[0].ParameterType == typeof(CancellationToken);
    }

    private static string ToLabel(string methodName)
    {
        if (methodName.StartsWith("GetAll", StringComparison.Ordinal))
        {
            methodName = methodName["GetAll".Length..];
        }

        if (methodName.EndsWith("Async", StringComparison.Ordinal))
        {
            methodName = methodName[..^"Async".Length];
        }

        if (string.IsNullOrWhiteSpace(methodName))
        {
            return "Unbekannt";
        }

        var builder = new StringBuilder(methodName.Length + 4);
        for (var i = 0; i < methodName.Length; i++)
        {
            var ch = methodName[i];
            if (char.IsUpper(ch) && i > 0)
            {
                builder.Append(' ');
            }

            builder.Append(ch);
        }

        return builder.ToString();
    }

    private static string GetApiExportUrl(string methodName)
        => $"/api-export?method={Uri.EscapeDataString(methodName)}";

    private void StartApiExport(string methodName)
    {
        _isApiExporting = true;
        Navigation.NavigateTo(GetApiExportUrl(methodName), true);
    }

    private sealed class ColumnSelection
    {
        public ColumnSelection(ExportColumn column, bool isSelected)
        {
            Column = column;
            IsSelected = isSelected;
        }

        public ExportColumn Column { get; }
        public bool IsSelected { get; set; }
    }

    private sealed class ApiMethodEntry
    {
        public ApiMethodEntry(string name, string label)
        {
            Name = name;
            Label = label;
        }

        public string Name { get; }
        public string Label { get; }
    }

    private void UpdateEta()
    {
        if (_completedCount <= 0 || _totalToProcess <= 0)
        {
            _hasEta = false;
            return;
        }

        var elapsed = DateTime.UtcNow - _startTimeUtc;
        var avgPerItemTicks = elapsed.Ticks / _completedCount;
        var remainingItems = Math.Max(0, _totalToProcess - _completedCount);
        var remaining = new TimeSpan(avgPerItemTicks * remainingItems);
        var finish = DateTime.UtcNow + remaining;

        _etaRemaining = $"{(int)remaining.TotalMinutes:D2}:{remaining.Seconds:D2}";
        _etaFinish = finish.ToLocalTime().ToString("HH:mm:ss");
        _hasEta = true;
    }
}
